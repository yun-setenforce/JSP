<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Farmstory2</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <!-- MVC 보안설정 -->
  <security-constraint>
  	<display-name>Prohibit Model1</display-name>
  	<web-resource-collection>
  		<web-resource-name>secure page</web-resource-name>
  		<url-pattern>*.jsp</url-pattern>
  	</web-resource-collection>
  	<auth-constraint>
  		<role-name>nobody</role-name>
  	</auth-constraint>  
  </security-constraint>
  <!-- 
  	- 시작 페이지 index.jsp 설정하지 않음
  	- controller.IndexController를 통한 기본 메인페이지 출력
  -->
  
  <!-- 로그인 여부 체크 필터 등록 -->
  <filter>
  	<filter-name>CheckLoginFilter</filter-name>
  	<filter-class>kr.farmstory2.filter.CheckLoginFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>CheckLoginFilter</filter-name>
  	<url-pattern>/board/write.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>CheckLoginFilter</filter-name>
  	<url-pattern>/board/view.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>CheckLoginFilter</filter-name>
  	<url-pattern>/board/modify.do</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
  	<filter-name>CheckLoginFilter</filter-name>
  	<url-pattern>/board/delete.do</url-pattern>
  </filter-mapping>
  <!-- 로그아웃 여부 체크 필터 등록 -->
  <filter>
  	<filter-name>CheckLogoutFilter</filter-name>
  	<filter-class>kr.farmstory2.filter.CheckLogoutFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>CheckLogoutFilter</filter-name>
  	<url-pattern>/user/logㅁin.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>CheckLogoutFilter</filter-name>
  	<url-pattern>/user/terms.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>CheckLogoutFilter</filter-name>
  	<url-pattern>/user/register.do</url-pattern>
  </filter-mapping>
  
  <!-- admin 여부 체크 필터 등록 -->
  <filter>
  	<filter-name>CheckAdminFilter</filter-name>
  	<filter-class>kr.farmstory2.filter.CheckAdminFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>CheckAdminFilter</filter-name>
  	<url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  
  <!-- 인코딩 필터 등록 -->
  <filter>
  	<filter-name>SetCharacterEncodingFilter</filter-name>
  	<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
  	<init-param>
  		<param-name>encoding</param-name>
  		<param-value>UTF-8</param-value>
  	</init-param>
  </filter>
  
  <filter-mapping>
  	<filter-name>SetCharacterEncodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
</web-app>